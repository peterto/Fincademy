<%= form_for(@course) do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
    <%= f.fields_for :steps do |builder| %>
       <%= render 'step_fields', f: builder %>
    <% end %>

  <%= link_to_add_fields "Add a step", f, :steps %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
